{
  "Short media": {
    "name": "Media Query (Max-Width)",
    "scope": "css",
    "prefix": "@ml",
    "body": [
      "@media screen and (max-width: $1) {",
      "  $2",
      "}"
    ],
    "description": "Медиа-запрос с максимальной шириной."
  },
  "Reset style": {
    "name": "Reset Styles",
    "scope": "css",
    "prefix": "recss",
    "body": [
      "*{padding:0;margin:0;border:0}*,:after,:before{-moz-box-sizing:border-box;-webkit-box-sizing:border-box;box-sizing:border-box}:active,:focus,a:active,a:focus{outline:0}aside,foo       ter,header,nav{display:block}body,html{width:100%;height:calc(100% - var(--header-height));line-height:1;font-size:14px;-ms-text-size-adjust:100%;-moz-text-size-adjust:100%;-web       kit-text-size-adjust:100%}button,input,textarea{font-family:inherit}input::-ms-clear{display:none}button{cursor:pointer}button::-moz-focus-inner{padding:0;border:0}a,a:hover,a:v       isited{text-decoration:none}ul li{list-style:none}img{vertical-align:top}h1,h2,h3,h4,h5,h6{font-size:inherit;font-weight:400}",
      "$1"
    ],
    "description": "Обнуление стилей"
  }
}
