{
  "position": "top",
  "layer": "bottom",
  "reload_style_on_change": true,
  "spacing": 0,
  "margin-bottom": 0,
  "modules-left": [
    "hyprland/workspaces",
    "hyprland/window",
  ],
  "modules-right": [
    "tray",
    "custom/playerctl",
    "custom/wakatime",
    "custom/leetcode",
    "pulseaudio",
    "cpu",
    "memory",
    "network",
    "hyprland/language",
    "clock",
  ],
  "cpu": {
    "interval": 1,
    "format": "[ {icon} {usage}% ]",
    "format-icons": [
      "<span color='#e0def4'></span>",
      "<span color='#e0def4'></span>",
      "<span color='#9ccfd8'></span>",
      "<span color='#9ccfd8'></span>",
      "<span color='#c4a7e7'></span>",
      "<span color='#c4a7e7'></span>",
      "<span color='#f6c177'></span>",
      "<span color='#eb6f92'></span>"
    ],
    "on-click": "killall htop || kitty --class global-float-big -e htop"
  },
  "custom/playerctl": {
    "exec": "~/.config/waybar/scripts/player.sh",
    "interval": 1,
    "return-type": "json",
    "on-click": "playerctl play-pause",
    "on-click-right": "kitty --title 'Music Visualizer' -e cava",
    "on-scroll-up": "playerctl next",
    "on-scroll-down": "playerctl previous"
  },
  "custom/leetcode": {
    "interval": 1800,
    "return-type": "json",
    "exec": "~/.config/waybar/scripts/leetcode.py",
    "on-click": "firefox -new-tab 'https://leetcode.com/problemset/'"
  },
  "custom/wakatime": {
    "interval": 1800,
    "return-type": "json",
    "exec": "~/.config/waybar/scripts/wakatime.py",
  },
  "memory": {
    "interval": 1,
    "format": "[ {icon} {percentage}% ]",
    "format-icons": [
      "<span color='#e0def4'></span>",
      "<span color='#e0def4'></span>",
      "<span color='#9ccfd8'></span>",
      "<span color='#9ccfd8'></span>",
      "<span color='#c4a7e7'></span>",
      "<span color='#c4a7e7'></span>",
      "<span color='#f6c177'></span>",
      "<span color='#eb6f92'></span>"
    ],
    "tooltip": true,
    "tooltip-format": "Memory - {used:0.1f}GB used",
    "on-click": "killall htop || kitty --class global-float-big -e htop"
  },
  "tray": {
    "spacing": 10,
    "icon-size": 14
  },
  "hyprland/workspaces": {
    "show-special": true,
    "format": "{icon}",
    "on-click": "activate",
    "format-icons": {
      "1": "一",
      "2": "二",
      "3": "三",
      "4": "四",
      "5": "五",
      "6": "六",
      "7": "七",
      "8": "八",
      "9": "九",
      "stash": "<span font='bold'></span>"
    },
    "tooltip": false,
    "persistent_workspaces": {
      "*": 9
    }
  },
  "hyprland/language": {
    "format": "[ {} ]",
    "min-length": 6,
    "format-en": "🇺🇸",
    "format-ru": "🇷🇺"
  },
  "network": {
    "format-linked": "󰈀 {ifname} (No IP)",
    "format-disconnected": "[ <span color='#eb6f92'></span> ]",
    "tooltip-format-disconnected": "Disconnected",
    "format-wifi": "[  {essid} ]",
    "format-ethernet": "[ Ethernet {essid} ]",
    "interval": 2,
    "tooltip": true,
    "on-click-right": "kitty -e nmtui",
    "format-alt": "[ <span foreground='#9ccfd8'> {bandwidthDownBytes}</span> <span foreground='#c4a7e7'> {bandwidthUpBytes}</span> ]",
    "tooltip-format": "Network: <big><b>{essid}</b></big>\nSignal strength: <b>{signaldBm}dBm ({signalStrength}%)</b>\nFrequency: <b>{frequency}MHz</b>\nInterface: <b>{ifname}</b>\nIP: <b>{ipaddr}/{cidr}</b>\nGateway: <b>{gwaddr}</b>\nNetmask: <b>{netmask}</b>"
  },
  "pulseaudio": {
    "format": "[ {icon} {volume}% ]",
    "format-muted": "[ <span color='#eb6f92'></span> Muted ]",
    "on-click": "pactl set-sink-mute 0 toggle",
    "format-icons": {
      "default": [
        "",
        "",
        "",
        ""
      ]
    },
    "scroll-step": 5,
    "tooltip": true,
    "tooltip-format": "{icon} at {volume}%",
    "smooth-scrolling-threshold": 1.5
  },
  "clock": {
    "format": "[  {:%H:%M} ]",
    "format-alt": "[  {:%d·%m·%y} ]",
    "tooltip-format": "<tt>{calendar}</tt>",
    "calendar": {
      "mode": "month",
      "mode-mon-col": 3,
      "on-scroll": 1,
      "on-click-right": "mode",
      "format": {
        "months": "<span color='#c4a7e7'><b>{}</b></span>",
        "weekdays": "<span color='#f6c177'><b>{}</b></span>",
        "today": "<span color='#eb6f92'><b>{}</b></span>"
      }
    },
    "actions": {
      "on-click-right": "mode",
      "on-click-forward": "tz_up",
      "on-click-backward": "tz_down",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down"
    }
  },
  "escape": true
}
